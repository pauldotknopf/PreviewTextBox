<Window x:Class="WPFAutoSelectTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:custom="clr-namespace:WPFAutoSelectTextBox"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <custom:AutoSelectTextBox AutoSelectText="{Binding Text, ElementName=TbAutoSelectText}"></custom:AutoSelectTextBox>
        <TextBox Name="TbAutoSelectText" />
    </StackPanel>
</Window>
